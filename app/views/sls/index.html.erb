
<h1>sds  Server Details</h1>

<table>
  <thead>
    <tr>
      <th>Servername</th>
      <th>Cpu</th>
      <th>Disk</th>
      <th>Process</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sds.each do |sd| %>
      <tr>
        <td><%= sd.name %></td>
        <td><%= sd.cpu %> 
	
        <td><%= sd.disk %></td>
        <td><%= sd.process %></td>
        <td><%= link_to 'Show', sd %></td>
       
        <td><%= link_to 'Destroy', sd, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

